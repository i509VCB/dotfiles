[
    // IDEA style alt + enter to show fixes.
    {
        "key": "alt+enter",
        "command": "editor.action.quickFix",
        "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    },
    // macOS Save all using Windows style buttons
    {
        "key": "ctrl+s",
        "command": "saveAll",
        "when": "!isLinux && !isWindows"
    }
]
